<%- include('partials/header', { activePage: 'users' }) %>
<h1 class="mb-4">Users</h1>
<a href="/admin/users/add" class="btn btn-success mb-3">Add User</a>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Email</th>
      <th>Verified</th>
      <th style="width:180px;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach((user, idx) => { %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <% if (user.verified) { %>
            <span class="badge badge-success">Yes</span>
          <% } else { %>
            <span class="badge badge-secondary">No</span>
          <% } %>
        </td>
        <td>
          <a href="/admin/users/edit/<%= user.id %>" class="btn btn-sm btn-info">Edit</a>
          <form action="/admin/users/delete/<%= user.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
            <button type="submit" class="btn btn-sm btn-danger ml-1">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('partials/footer') %>
