<%- include('partials/header', { activePage: 'users' }) %>
<h1 class="mb-4">Users</h1>
<a href="/admin/users/add" class="btn btn-success mb-3">Add User</a>

<h3>Verified Users</h3>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Email</th>
      <th>Verified</th>
      <th style="width:180px;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% verifiedUsers.forEach((user, idx) => { %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><span class="badge badge-success">Yes</span></td>
        <td>
          <a href="/admin/users/edit/<%= user.id %>" class="btn btn-sm btn-info">Edit</a>
          <form action="/admin/users/deactivate" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="<%= user.id %>">
            <button type="submit" class="btn btn-sm btn-warning ml-1">Deactivate</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<h3 class="mt-5">Unverified Users</h3>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Email</th>
      <th>Source</th>
      <th>Verified</th>
      <th style="width:180px;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% unverifiedUsers.forEach((user, idx) => { %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.source %></td>
        <td><span class="badge badge-secondary">No</span></td>
        <td>
          <% if (user.source === 'users' || user.source === 'unverified') { %>
            <form action="/admin/users/activate" method="POST" style="display:inline;">
              <input type="hidden" name="id" value="<%= user.id %>">
              <input type="hidden" name="source" value="<%= user.source %>">
              <button type="submit" class="btn btn-sm btn-success">Activate</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('partials/footer') %>
